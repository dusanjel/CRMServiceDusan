@model IEnumerable<CRMServiceDusan.Models.Account>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accounts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.accountid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address1_line1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numberofcontacts)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.numberofcontacts > 0)
        {
            if (item.missingAllContactInformation == true)
            {
                <tr bgcolor="#ff0000">
                    <td>
                        @Html.DisplayFor(modelItem => item.accountid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address1_line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberofcontacts)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.accountid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address1_line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberofcontacts)
                    </td>
                    <td>
                    </td>
                </tr>

            }
        }
        else
        {
            if (item.missingAllContactInformation == true)
            {
                <tr bgcolor="#ff0000">
                    <td>
                        @Html.DisplayFor(modelItem => item.accountid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address1_line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberofcontacts)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            else
            {
                <tr bgcolor="#ff6600">
                    <td>
                        @Html.DisplayFor(modelItem => item.accountid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address1_line1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberofcontacts)
                    </td>
                    <td>
                    </td>
                </tr>

            }
        }
    }

</table>
